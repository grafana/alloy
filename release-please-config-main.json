{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "changelog-sections": [
    { "type": "feat", "section": "Features üåü" },
    { "type": "fix", "section": "Bug Fixes üêõ" },
    { "type": "docs", "section": "Documentation", "hidden": true },
    { "type": "style", "section": "Styles", "hidden": true },
    { "type": "refactor", "section": "Refactoring", "hidden": true },
    { "type": "perf", "section": "Performance", "hidden": true },
    { "type": "test", "section": "Tests", "hidden": true },
    { "type": "build", "section": "Build", "hidden": true },
    { "type": "ci", "section": "CI", "hidden": true },
    { "type": "chore", "section": "Chores", "hidden": true },
    { "type": "proposal", "section": "Proposals", "hidden": true },
    { "type": "revert", "section": "Reverts", "hidden": true }
  ],
  "always-update": true,
  "draft-pull-request": true,
  "pull-request-title-pattern": "[DO NOT MERGE] chore${scope}: release${component} ${version}",
  "pull-request-header": "üö´ **DO NOT MERGE - This PR is for tracking purposes only**\n\nThis draft PR tracks the changes that will be included in the next minor release. It updates automatically with each push to main.\n\nWhen ready to cut a release:\n1. Create a release branch (e.g., `release/v1.13`)\n2. The release-please automation will take over on that branch\n3. This PR will remain on main to track the next release\n\n---",
  "packages": {
    ".": {
      "release-type": "go",
      "versioning": "minor-breaking",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "generic",
          "path": "docs/sources/_index.md"
        }
      ]
    }
  }
}
