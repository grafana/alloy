# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  components: [Component!]!
  todos: [Todo!]!
}

type Component {
  id: ID!
  name: String!
  description: String!
}

# ========================= EXAMPLE STUFF =========================

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
