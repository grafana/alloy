discovery.kubernetes "example" {
	role            = "pod"
	kubeconfig_file = "/home/toby/.kube/config"
}

loki.process "example" {
	forward_to = [loki.write.default.receiver]

	stage.match {
		selector = "foobar"

		stage.docker { }

		stage.match {
			selector = "foobar_two"

			stage.cri { }
			action              = "drop"
			pipeline_name       = "two"
			drop_counter_reason = "nope_two"
		}
		action              = "drop"
		pipeline_name       = "one"
		drop_counter_reason = "nope"
	}
}

loki.source.file "example" {
	targets    = discovery.kubernetes.example.targets
	forward_to = [loki.process.example.receiver]

	file_match {
		enabled = true
	}
	legacy_positions_file = "/var/log/positions.yaml"
}

loki.write "default" {
	endpoint {
		url = "http://localhost/loki/api/v1/push"
	}
	external_labels = {}
}
