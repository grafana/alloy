otelcol.receiver.filelog "default" {
	include = ["/var/log/*.log"]
	exclude = ["/var/log/excluded.log"]

	ordering_criteria { }
	fingerprint_size = "1000B"

	multiline { }
}

otelcol.exporter.file "default" {
	path        = "/var/log/otel-logs-*.log"
	append      = true
	compression = "zstd"

	group_by {
		enabled            = true
		resource_attribute = "svc.name"
	}
}
